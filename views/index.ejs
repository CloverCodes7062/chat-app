<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="../css/index.css">
    <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <header class="header">
        <h1>Hi <%= name %> Welcome To The Chatroom</h1>
    </header>
    <section class="left-section">
        <div id="localScreenContainer">
            <video id="localScreen" style="display: none; width: 100%; height: 100%;" autoplay muted></video>
        </div>
        <div id="remoteVideosContainer"></div>
    </section>
    <main class="main-section">
        <div id="messages-container">
            <form id="preventDefault-POST" action="/" method="POST">
                <div>
                    <label for="message"></label>
                    <input type="text" name="message" id="message" placeholder="Enter a message" required>
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="screenshare-container">
            <button id="startScreenShare">Start Screen Share</button>
            <button id="stopScreenShare" style="display: none;">Stop Screen Share</button>
        </div>
        <script>const userNameOfSender = '<%= name %>' || 'NO NAME GIVEN';</script>
        <script src="../main-script.js" type="text/javascript" defer></script>
        <form action="/logout?_method=DELETE" method="POST">
            <button type="submit">Log Out</button>
        </form>
    </main>
    <section class="right-section"></section>
    <script src="../dragVideosScript.js" type="text/javascript" defer></script>
    <script type="text/javascript" defer>
        function runSetLocalScreenWidthHeightScript() {
            const leftSections = document.getElementsByClassName('left-section');
            const leftSection = leftSections[0];
            const rect = leftSection.getBoundingClientRect();

            const containerWidth = rect.width;
            const containerHeight = rect.height;

            const localScreenContainer = document.getElementById('localScreenContainer');
            localScreenContainer.style.width = `${containerWidth}px`;
            localScreenContainer.style.height = `auto`;
        }

        runSetLocalScreenWidthHeightScript();
    </script>
</body>
</html>